<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#8064ffda" />
            <stroke
                android:width="1dp"
                android:color="#004d40" />
            <corners
                android:radius="2dp"
                />


        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#99000000"
                android:endColor="#99000000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#99000000" />
            <corners
                android:radius="2dp"
                />

        </shape>
    </item>
</selector>
